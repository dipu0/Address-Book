<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    android:background="@drawable/etoutline2">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/rprofileImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:cropToPadding="true"
        android:src="@drawable/cover1"
        app:civ_border_width="3dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="false"
        app:civ_border_color="@color/colorAmber_A400"
        android:outlineAmbientShadowColor="@color/colorGreen_A400"
        android:outlineSpotShadowColor="@color/colorGreen_A400"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/textView_rName"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Md. Asad Chowdhury Dipu"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="21sp"/>
        <TextView
            android:id="@+id/textView_rPhn"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01521583534"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="21sp"/>

    </LinearLayout>

</LinearLayout>
